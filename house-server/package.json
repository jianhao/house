{
  "name": "house-api",
  "version": "1.0.0",
  "description": "杭州保障房小程序后端API服务",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:eslint": "eslint --cache --max-warnings 0 \"src/**/*.{js,ts}\" --fix",
    "lint": "npm run lint:eslint",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "commitlint": "commitlint",
    "migrate": "node -r dotenv/config migrations/run.js",
    "seed": "node -r dotenv/config seeds/run.js",
    "deploy:upload": "rsync -avz --exclude='node_modules' --exclude='.git' --exclude='dist' --exclude='*.log' --exclude='.eslintcache' --exclude='tests' --exclude='docs' --exclude='.husky' --exclude='.prettierignore' --exclude='.eslintignore' --exclude='.eslintrc.js' --exclude='prettier.config.js' --exclude='commitlint.config.js' --exclude='jest.config.js' --exclude='README.md' --exclude='docker-compose.yml' -e 'ssh -p 2222' . ubuntu@101.43.35.163:/opt/house-project/house-server/",
    "deploy:build-upload": "pnpm run build && scp -P 2222 -r dist package.json pnpm-lock.yaml ubuntu@101.43.35.163:/opt/house-project/house-server/"
  },
  "keywords": [
    "fastify",
    "postgresql",
    "redis",
    "wechat",
    "house"
  ],
  "author": "House Team",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/postgres": "^5.2.2",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/sensible": "^5.5.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "bcrypt": "^5.1.1",
    "axios": "^1.6.0",
    "sharp": "^0.32.6",
    "node-cron": "^3.0.3",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1",
    "fastify-plugin": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/bcrypt": "^5.0.2",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.57.1",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "3.3.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6"
  }
}
